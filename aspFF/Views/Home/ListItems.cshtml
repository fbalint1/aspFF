@model IEnumerable<aspFF.Models.Item>

    <body style="font-family:'Roboto Slab';font-size: 30px;">
        <p style="font-size: 50px; font-weight:700; color:black" class="text-center">
            Elérhető termékeink listája
        </p>
        @foreach (var item in Model)
        {
            <div class="card mb-3" style="max-width: 800px;max-height: 200px">
                <div class="row no-gutters">
                    <div class="col-md-4">
                        <img src="~/bag.png" class="card-img" style="max-height: 200px;max-width: 280px">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">@item.Name</h5>
                            <p class="card-text">@item.Price HUF &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; Elérhető készlet: @item.Quantity</p>
                            <p class="text-right">
                                <form method="put" action="/Home/AddToCart">
                                    <input type="number" max="@item.Quantity" value="0" name="quantity" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
                                    <input type="number" value="@item.Id" name="id" hidden />
                                    <button type="submit" class="btn btn-outline-secondary">Kosárba</button>
                                </form>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        }
        <div style="margin-bottom: 100px" />
    </body>