@{
    ViewData["Title"] = "Új termék hozzáadása";
}


<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

<body style="font-family:'Roboto Slab';font-size: 30px;">
    <h1 class="text-center">@ViewData["Title"]</h1>
    <form method="post" action="/Home/AddItem">
        <div class="form-group">
            <label for="typeLabel">Osztály</label>
            <select class="form-control" name="Type">
                <option value="food">Étel</option>
                <option value="drink">Ital</option>
                <option value="toy">Játék</option>
                <option value="perfume">Illatszer</option>
                <option value="household">Háztartás</option>
            </select>
            <small id="typeHelp" class="form-text text-muted">Az áru osztálya</small>
        </div>
        <div class="form-group">
            <label for="nameLabel">Név</label>
            <input type="text" class="form-control" name="Name">
            <small id="nameHelp" class="form-text text-muted">Áru neve</small>
        </div>
        <div class="form-group">
            <label for="priceLabel">Ár</label>
            <input type="number" class="form-control" name="Price">
            <small id="nameHelp" class="form-text text-muted">Áru ára</small>
        </div>
        <div class="form-group">
            <label for="quantityLabel">Mennyiség</label>
            <input type="number" class="form-control" name="Quantity">
            <small id="quantityHelp" class="form-text text-muted">Áru mennyiség</small>
        </div>
        <button type="submit" class="btn btn-primary">Bevét</button>
    </form>
</body>

